source "https://rubygems.org"

# Jekyll version that's compatible with GitHub Pages
gem "jekyll", "~> 4.4.0"

# GitHub Pages integration
gem "github-pages", group: :jekyll_plugins

# Development tools
group :jekyll_plugins do
  gem "jekyll-relative-links"
  gem "jekyll-sitemap"
end

# Windows and JRuby platform-specific dependencies
gem "webrick", "~> 1.8", :platforms => [:ruby_31, :ruby_32]
